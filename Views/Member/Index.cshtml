                    @Html.DisplayNameFor(model => model.IDCard)
                </th>
                -->

                    <th></th>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <td data-th="@Html.DisplayNameFor(model => model.name)"><input type="text" name="searchName" value="@ViewData["SearchName"]" /></td>
                    <td data-th="@Html.DisplayNameFor(model => model.department)"><input type="text" name="searchDepartment" value="@ViewData["SearchDepartment"]" /></td>
                    <td data-th="@Html.DisplayNameFor(model => model.position)"><input type="text" name="searchPosition" value="@ViewData["SearchPosition"]" /></td>
                    <td data-th="@Html.DisplayNameFor(model => model.tel)"></td>
                    <td data-th="@Html.DisplayNameFor(model => model.mobile)"></td>
                    <td data-th="操作">
                        <input type="submit" value="搜索" class="btn btn-default" />
                        <a asp-action="Index" class="btn btn-default">清除</a>
                    </td>
                </tr>
                @foreach (var item in Model)
    {
            <tr>
                <td data-th="@Html.DisplayNameFor(model => model.name)">
                    @Html.DisplayFor(modelItem => item.name)
                </td>

                <!--


    <td>
        @Html.DisplayFor(modelItem => item.createTime)
    </td>
    -->
                <td data-th="@Html.DisplayNameFor(model => model.department)">
                    @Html.DisplayFor(modelItem => item.department.departmentName)
                </td>
                <td data-th="@Html.DisplayNameFor(model => model.position)">
                    @Html.DisplayFor(modelItem => item.position.positionName)
                </td>
                <td data-th="@Html.DisplayNameFor(model => model.tel)">
                    @Html.DisplayFor(modelItem => item.tel)
                </td>
                <td data-th="@Html.DisplayNameFor(model => model.mobile)">
                    @Html.DisplayFor(modelItem => item.mobile)
                </td>
                <!--
    <td>
        @Html.DisplayFor(modelItem => item.sex)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.employeeId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IDCard)
    </td>
    -->

                <td data-th="操作">
                    <a asp-action="Edit" asp-route-id="@item.memberId">编辑</a> |
                    <a asp-action="Details" asp-route-id="@item.memberId">详细</a> |
                    <a asp-action="Delete" asp-route-id="@item.memberId">删除</a>
                </td>
            </tr>
}
            </tbody>
        </table>
    </form>
        <pager pager-option="ViewBag.PagerOption as ToyForSI.TagHelpers.MoPagerOption"></pager>
