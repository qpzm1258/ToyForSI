@model ToyForSI.Models.Position

@{
    ViewData["Title"] = "新建职位";
}

<h2>新建</h2>

<h4>职位</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="positionName" class="control-label"></label>
                <input asp-for="positionName" class="form-control" />
                <span asp-validation-for="positionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="positionAbstract" class="control-label"></label>
                <input asp-for="positionAbstract" class="form-control" />
                <span asp-validation-for="positionAbstract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新建" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
