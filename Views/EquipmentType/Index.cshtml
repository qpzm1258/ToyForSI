@model IEnumerable<ToyForSI.Models.EquipmentType>

@{
    ViewData["Title"] = "列表";
}

<h2>设备类型列表</h2>

<p>
    <a asp-action="Create">添加设备类型</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.equipmentTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.life)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.equipmentTypeRemarks)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.equipmentTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.life)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.equipmentTypeRemarks)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.equipmentTypeId">编辑</a> |
                <a asp-action="Details" asp-route-id="@item.equipmentTypeId">详细</a> |
                <a asp-action="Delete" asp-route-id="@item.equipmentTypeId">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
