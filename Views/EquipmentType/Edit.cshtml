@model ToyForSI.Models.EquipmentType

@{
    ViewData["Title"] = "编辑";
}

<h2>编辑</h2>

<h4>编辑设备类型</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="equipmentTypeId" />
            <div class="form-group">
                <label asp-for="equipmentTypeName" class="control-label"></label>
                <input asp-for="equipmentTypeName" class="form-control" />
                <span asp-validation-for="equipmentTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="life" class="control-label"></label>
                <input asp-for="life" class="form-control" />
                <span asp-validation-for="life" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="equipmentTypeRemarks" class="control-label"></label>
                <input asp-for="equipmentTypeRemarks" class="form-control" />
                <span asp-validation-for="equipmentTypeRemarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回设备类型列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
