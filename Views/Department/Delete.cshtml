@model ToyForSI.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<h2>删除</h2>

<h3 class="alert alert-danger">确定删除该部门？若删除该科室，则相关科室属性也会被删除</h3>
<div>
    <h4>科室</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.departmentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.departmentName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.departmentLeader)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.departmentLeader.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.departmentManager)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.departmentManager.name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="departmentId" />
        <input type="submit" value="删除" class="btn btn-default" /> |
        <a asp-action="Index">返回科室列表</a>
    </form>
</div>
